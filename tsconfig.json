{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./node_modules/@types", "./src/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
